{
  "compilerOptions": {
    "rootDir": "./src",
    "module": "commonjs",
    "target": "es5",
    "noImplicitAny": false,
    "sourceMap": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "./dist",
    "declaration": true, //create definition files
    "noEmitOnError": false //dont compile on errors
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}